    for(int j=0; j<=6; j++){

        if (id == ID[j] ){
            printf("You are welcome!\n Your Id is : %d\n", id);
            ptr = &ID[j];
            attendance (ptr);
            printf_s("After Collecting Attendance is:\n");
            for (int k = 0; k < 6; k++){
            printf("%d\t", ID[k]);
   }
    }
    }
